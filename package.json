{
    "name": "difflens",
    "version": "0.0.1",
    "description": "Visual Regression Testing & Accessibility Auditing Tool",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "bin": {
        "difflens": "dist/cli.js"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest",
        "test:run": "vitest run",
        "start": "node dist/cli.js",
        "mcp": "node dist/mcp-server.js",
        "api": "node dist/api-server.js",
        "prepublishOnly": "npm run build && npm run test:run"
    },
    "keywords": [
        "testing",
        "visual-regression",
        "accessibility",
        "playwright",
        "screenshot",
        "diff",
        "a11y",
        "axe-core",
        "mcp",
        "ai"
    ],
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "author": "hayato06",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hayato06/difflens.git"
    },
    "bugs": {
        "url": "https://github.com/hayato06/difflens/issues"
    },
    "homepage": "https://github.com/hayato06/difflens#readme",
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@types/node": "^20.19.28",
        "@types/pixelmatch": "^5.2.6",
        "@types/pngjs": "^6.0.5",
        "cac": "^6.7.14",
        "esbuild": "^0.27.2",
        "pixelmatch": "^5.3.0",
        "playwright": "^1.57.0",
        "pngjs": "^7.0.0",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "vitest": "^1.0.0"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.9",
        "@modelcontextprotocol/sdk": "^1.25.2",
        "hono": "^4.11.4",
        "zod": "^4.3.5"
    }
}